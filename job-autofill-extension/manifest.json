{
    "manifest_version": 3,
    "name": "Deepraj",
    "version": "1.0.0",
    "description": "JS, JAVA, HTML, CSS etc.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Job Autofill",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "options_page": "popup/popup.html"
}